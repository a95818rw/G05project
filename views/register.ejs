</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">建立帳號</h1>
                            </div>
                            <form class="user" action="/adduser" method="post">
                                
                                <div class="form-group">
                                    <input type="account" class="form-control form-control-user" id="exampleInputEmail" placeholder="帳號" name="name">
                                </div>
                                
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" id="exampleInputEmail" placeholder="電子郵件地址" name="email">
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control form-control-user" id="exampleInputEmail" placeholder="密碼" name="pwd">
                                </div>

                                <input class="btn btn-primary btn-user btn-block" type="submit" value="創建">
                                <hr>
                                <h7>帳號已存在</h7>
                                
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="login">已擁有帳號嗎? 點此登入</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
